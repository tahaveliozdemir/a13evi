rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is staff or admin
    function isStaffOrAdmin() {
      return isSignedIn() && (
        !exists(/databases/$(database)/documents/users/$(request.auth.uid)) || // Anonymous users (staff)
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'staff']
      );
    }

    // Users collection - Admin only
    match /users/{userId} {
      allow read: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // Main data document - Staff can read, Admin can write
    match /score_tracker_data/main_data_document {
      allow read: if isStaffOrAdmin();
      allow write: if isAdmin();
    }

    // Settings - Staff can read, Admin can write
    match /settings/app_config {
      allow read: if isStaffOrAdmin();
      allow write: if isAdmin();
    }

    // Audit logs - Admin only
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn(); // Anyone can create logs
      allow update, delete: if false; // Logs are immutable
    }

    // Default deny for all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
